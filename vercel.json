import type { VercelRequest, VercelResponse } from '@vercel/node';

// Este é um exemplo simplificado. Em um projeto real, use variáveis de ambiente para a URL da API.
const ALGO_INDEXER_API = 'https://mainnet-idx.algonode.cloud';
const WALLET_ADDRESS = 'JPKARPW7WYNGDVEQ3BVVB6HDGUQ27X7J7IOAMPC5NWIKARJLWSLAD3URKA';
const SOS_TOKEN_ID = 735028557;

export default async function handler(req: VercelRequest, res: VercelResponse) {
  try {
    const response = await fetch(`${ALGO_INDEXER_API}/v2/accounts/${WALLET_ADDRESS}`);
    if (!response.ok) {
      throw new Error(`Failed to fetch account data: ${response.statusText}`);
    }

    const data = await response.json();
    const assets = data.account.assets || [];
    const sosAsset = assets.find((asset: any) => asset['asset-id'] === SOS_TOKEN_ID);

    const sosBalance = sosAsset ? sosAsset.amount / 1000000 : 0; // Ajuste para 6 casas decimais
    const algoBalance = data.account.amount / 1000000; // Ajuste para 6 casas decimais

    res.status(200).json({
      sos: sosBalance.toFixed(6),
      algo: algoBalance.toFixed(6),
      lastUpdate: new Date().toISOString()
    });
  } catch (error) {
    console.error("Error fetching blockchain data:", error);
    res.status(500).json({ error: 'Failed to retrieve data from blockchain' });
  }
}
